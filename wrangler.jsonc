{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "unified-api-scotte",
	"main": "src/index.ts",
	"compatibility_date": "2025-10-08",
	"compatibility_flags": [
		"nodejs_compat", 
		"global_fetch_strictly_public"
	],
	
	// --- 1. ENVIRONMENT VARIABLES (Used to build the Gateway URL/Payload) ---
	"vars": {
		"CLOUDFLARE_ACCOUNT_ID": "3746ba19913534b7653b8af6a1299286",
		"AI_GATEWAY_NAME": "unified-api-gw",
		"DYNAMIC_ROUTE_NAME": "hybrid_split" 
	},
	
	// --- 2. SECRETS (Required for OpenAI Authorization) ---
	"secrets": [
		// This variable holds your actual 'sk-' OpenAI key, set via `wrangler secret put`.
		"OPENAI_API_KEY"
	],
	
	"assets": {
		"binding": "ASSETS",
		"directory": "./public"
	},
	"observability": {
		"enabled": true
	},
	"ai": {
		"binding": "AI"
	},
	"upload_source_maps": true
}
